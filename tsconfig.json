{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "target": "ES2020",
    "types": [
      "node"
    ]
  }
}
